import java.util.Scanner;
public class PartitionList {

	public static void main(String[] args){
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Enter the size of the list, followed by its elements\n"
				+ "the pivot point will be the first element of the list: ");
		int size = sc.nextInt();
		
		int[] arr = new int[size];
		for(int i = 0; i<size; i++){
			arr[i] = sc.nextInt();
			
		}
		
		int pivot = partition(arr);
		System.out.print("The list after the partition is: ");
		for(int a: arr)
			System.out.print(a + " ");
		System.out.println();
		
		System.out.print("The pivot is at position: " + pivot);
		
		
		
		
		
	}
	
	
	public static int partition(int[] arr){
		
		int start = 0;
		int initIdx = arr[start];
		int low = start+1, high = arr.length-1;
		int pivot = arr[start];
		
		
		while(high>low){
			while(low<=high && arr[low]<=pivot) low++;
			while(low<=high && arr[high]>pivot) high--;
			
			//swap elements
			if(high>low){
				int temp = arr[low];
				arr[low] = arr[high];
				arr[high] = temp;
			}
			
			
		}
		
		
		
		if(high>=start){
			
			int temp = arr[high];
			arr[high] = arr[start];
			arr[start] = temp;
			return high;
		}else{
			return start;
			
		}
		
	}
	
	
	
}
